@model DOCTORLOAN.Models.VMAuth.Signin;
@{
    ViewData["Title"] = "Đăng nhập";
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/auth/icomoon/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Style -->
    <link href="~/auth/auth.css" rel="stylesheet" />
    <title>Đăng nhập - Công ty TNHH Gia Thái DOCTORLOAN</title>
</head>
<body>
    <div class="d-lg-flex auth">
        <div class="contents order-2 order-lg-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-12 frm-body">
                        <h3>Đăng nhập tài khoản</h3>
                        <div class="sub-tt">Vui lòng nhập thông tin đăng nhập</div>
                        <form asp-controller="Auth" asp-action="Login" class="row needs-validation" novalidate method="post">
                            <div class="mb-3">
                                <label for="username" class="req">Email/ Số điện thoại</label>
                                <input type="text" class="form-control" placeholder="Nhập số điện thoại hoặc email" asp-for="UserName" id="username" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập email hoặc số điện thoại.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="req">Mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu" asp-for="Password" id="password" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập mật khẩu.
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="list-control">
                                    <label class="control control--checkbox">
                                        <span class="caption">Ghi nhớ đăng nhập</span>
                                        <input type="checkbox" asp-for="KeepLoggedIn" checked="checked" />
                                        <span class="control__indicator"></span>
                                    </label>
                                    <a href="javascript:void(0)" class="forgot-pass">Quên mật khẩu?</a>
                                </div>
                            </div>
                            <div class="">
                                <button type="submit" class="btn btn-submit">Đăng nhập</button>
                            </div>

                            @if (ViewData["ValidateMessage"] != null)
                            {
                                <br />
                                <br />
                                <label>@ViewData["ValidateMessage"]</label>
                            }
                        </form>

                        <div class="frm-different">
                            <span class="hr-or"><small>Hoặc</small></span>
                            <button type="button" class="login-with-google-btn">
                                <span>Tiếp tục với Google</span>
                            </button>
                            <div class="redirect-action">Chưa có tài khoản? <a asp-controller="Auth" asp-action="Register">Đăng ký</a></div>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-controller="Home" asp-action="Index"><img class="logo-auth" src="~/auth/img/logo-single.svg" /></a>
            <div class="copyright-auth">&copy; DOCTORLOAN @DateTime.Now.Year</div>
        </div>

        <div class="bg-auth order-1 order-lg-2">
            <img class="img-auth-main" src="~/auth/img/auth-img-main.svg" />
            <img class="img-auth-top-right" src="~/auth/img/top-right.svg" />
            <img class="img-auth-bottom-left" src="~/auth/img/bottom-left.svg" />
        </div>
    </div>
    <script src="~/auth/jquery-3.3.1.min.js"></script>
    <script src="~/libs/Bootstrap/popper.min.js"></script>
    <script src="~/libs/Bootstrap/bootstrap.min.js"></script>

    <script type="text/javascript">
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>
</html>