@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/auth/icomoon/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Style -->
    <link href="~/auth/auth.css" rel="stylesheet" />
    <title>Đăng ký tài khoản - Công ty TNHH Gia Thái DOCTORLOAN</title>
</head>
<body>
    <div class="d-lg-flex auth">
        <div class="contents order-2 order-lg-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-12 frm-body">
                        <h3>Đăng ký tài khoản</h3>
                        <div class="sub-tt">Vui lòng nhập thông tin để tạo tài khoản</div>
                        <form method="post" asp-controller="Auth" asp-action="RegisterPost" class="row needs-validation" novalidate>
                            @if (TempData["AlertMessageSuccess"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["AlertMessageSuccess"]
                                </div>
                            }
                            @if (TempData["AlertMessageError"] != null)
                            {
                                <div class="alert alert-warning">
                                    @TempData["AlertMessageError"]
                                </div>
                            }
                            <div class="col-xl-6 col-lg-12 col-md-6 col-12 mb-3">
                                <label for="firstName" class="req">Họ</label>
                                <input type="text" class="form-control" placeholder="Nhập Họ" id="lastName" name="lastName" required />
                            </div>
                            <div class="col-xl-6 col-lg-12 col-md-6 col-12 mb-3">
                                <label for="firstName" class="req">Tên</label>
                                <input type="text" class="form-control" placeholder="Nhận Tên" id="firstName" name="firstName" required />
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng nhập Họ Tên.
                            </div>
                            <div class="mb-3">
                                <label for="email" class="req">Số điện thoại</label>
                                <input type="text" class="form-control" placeholder="Nhập số điện thoại" id="phone" name="phone" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập số điện thoại liên hệ.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="req">Email (Tài khoản đăng nhập)</label>
                                <input type="text" class="form-control" placeholder="Nhập số email" id="email" name="email" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập email.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="req">Mật khẩu</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu" id="password" name="password" required />
                                <div class="invalid-feedback">
                                    Vui lòng nhập mật khẩu.
                                </div>
                            </div>
                            <div class="">
                                <button type="submit" class="btn btn-submit">Đăng ký</button>
                            </div>
                        </form>

                        <div class="frm-different">
                            <span class="hr-or"><small>Hoặc</small></span>
                            <button type="button" class="login-with-google-btn">
                                <span>Tiếp tục với Google</span>
                            </button>
                            <div class="redirect-action">Đã có tài khoản? <a asp-controller="Auth" asp-action="Login">Đăng nhập</a></div>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-controller="Home" asp-action="Index"><img class="logo-auth" src="~/auth/img/logo-single.svg" /></a>
            <div class="copyright-auth">&copy; DOCTORLOAN @DateTime.Now.Year</div>
        </div>
        <div class="bg-auth order-1 order-lg-2">
            <img class="img-auth-main" src="~/auth/img/auth-img-main.svg" />
            <img class="img-auth-top-right" src="~/auth/img/top-right.svg" />
            <img class="img-auth-bottom-left" src="~/auth/img/bottom-left.svg" />
        </div>
    </div>
    <script src="~/auth/jquery-3.3.1.min.js"></script>
    <script src="~/libs/Bootstrap/popper.min.js"></script>
    <script src="~/libs/Bootstrap/bootstrap.min.js"></script>

    <script type="text/javascript">
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
</body>
</html>